<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMenuBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/hamburgerDrawerBtn"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/hamburger_menu"
        android:elevation="2dp" />

    <LinearLayout
        android:id="@+id/lnrLytUserDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:gravity="center_vertical|end"
        android:orientation="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:elevation="2dp"
        android:src="@drawable/ic_baseline_close_24"
        app:fabSize="auto"
        app:pressedTranslationZ="8dp" />

    <com.viceboy.circularrevealdrawer.widget.CircularRevealMenu
        android:id="@+id/circularMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civProfileImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:elevation="4dp"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@android:color/white"
        tools:layout_marginTop="36dp"
        tools:src="@drawable/banker" />

</RelativeLayout>